<%= provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
	<span6 class="offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= render 'fields', f: f %>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>

		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails" target="_blank">change</a>
	</span6>
</div>